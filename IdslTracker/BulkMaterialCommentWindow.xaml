<Window x:Class="IdslTracker.BulkMaterialCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdslTracker"
        mc:Ignorable="d"
        Title="BulkMaterialCommentWindow" Height="400" Width="400">
    <Grid Margin="20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Material Comment:"></Label>
        <TextBox Grid.Row="1" x:Name="MaterialCommentDoorTextBox" FontSize="15" TextWrapping="Wrap"></TextBox>
        <Button Grid.Row="6" Grid.Column="1" Content="Submit" Click="Submit_Button_Click"></Button>
    </Grid>
</Window>
